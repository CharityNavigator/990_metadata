<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.irs.gov/efile" targetNamespace="http://www.irs.gov/efile" elementFormDefault="qualified" attributeFormDefault="unqualified" version="1.0">
	<xsd:annotation>
		<xsd:documentation>
			<Description>IRS e-file Schema - Facility Placed in Service Statement</Description>
			<TaxYear>2014</TaxYear>
			<MaturityLevel>Drop 3 Release</MaturityLevel>
			<ReleaseDate>Sept.8, 2015</ReleaseDate>
		</xsd:documentation>
	</xsd:annotation>

	<xsd:include schemaLocation="../../../Common/efileTypes.xsd"/>

	<!-- ================================================================================= -->
	<!-- ===============  Facility Placed in Service Statement  ========================== -->
	<!-- ================================================================================= -->

	<xsd:element name="FacilityPlacedServiceStatement">
		<xsd:annotation>
			<xsd:documentation>Facility placed in service statement</xsd:documentation>
		</xsd:annotation>
		<xsd:complexType>
			<xsd:complexContent>
				<xsd:extension base="FacilityPlacedServiceStatementType">
					<xsd:attributeGroup ref="DocumentAttributes">
						<xsd:annotation>
							<xsd:documentation>Common return document attributes</xsd:documentation>
						</xsd:annotation>
					</xsd:attributeGroup>
					<xsd:attribute name="documentName" type="xsd:string" fixed="FacilityPlacedInServiceStatement">
						<xsd:annotation>
							<xsd:documentation>IRS internal use only. To avoid error in the return, do not include the attribute name or value.</xsd:documentation>
						</xsd:annotation>
					</xsd:attribute>
				</xsd:extension>
			</xsd:complexContent>
		</xsd:complexType>
	</xsd:element>

	<xsd:complexType name="FacilityPlacedServiceStatementType">
		<xsd:annotation>
			<xsd:documentation>Facility placed in service statement</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>

			<!-- Facility Placed Service -->
			<xsd:element name="FacilityPlacedService" type="FacilityPlacedServiceType" minOccurs="0" maxOccurs="unbounded">
				<xsd:annotation>
					<xsd:documentation>
						<Description>Facility placed in service statement</Description>
					</xsd:documentation>
				</xsd:annotation>
			</xsd:element>

		</xsd:sequence>
	</xsd:complexType>

	<!-- Type for Repeating Group - Facility Placed Service -->
	<xsd:complexType name="FacilityPlacedServiceType">
		<xsd:sequence>

			<!-- Facility -->
			<xsd:element name="FacilityTxt" type="LineExplanationType" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>
						<Description>Facility</Description>
					</xsd:documentation>
				</xsd:annotation>
			</xsd:element>

			<!-- Type Of Fuel -->
			<xsd:element name="FuelTyp" type="LineExplanationType" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>
						<Description>Type Of fuel</Description>
					</xsd:documentation>
				</xsd:annotation>
			</xsd:element>

			<!-- In Service Date -->
			<xsd:element name="PlacedInServiceDt" type="DateType" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>
						<Description>In service date</Description>
					</xsd:documentation>
				</xsd:annotation>
			</xsd:element>

		</xsd:sequence>
	</xsd:complexType>

</xsd:schema>
